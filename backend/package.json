    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
